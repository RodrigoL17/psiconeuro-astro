---
import RoundedCheck from "./icons/RoundedCheck.astro";
---

<div
  class="relative flex w-full max-w-[20rem] flex-col rounded-xl bg-white p-8 shadow-lg shadow-[#d5a8ff]/30"
>
  <div
    class="relative m-0 mb-8 overflow-hidden rounded-none border-b border-white/10 bg-transparent bg-clip-border pb-8 text-center text-gray-700 shadow-none"
  >
    <p
      class="block font-primary font-bold uppercase leading-normal text-[#6e00d3] antialiased"
    >
      standard
    </p>
    <h3
      class="mt-6 flex justify-center gap-1 font-sans text-7xl font-normal tracking-normal antialiased"
    >
      <span class="mt-2 text-4xl">$</span>29
      <span class="self-end text-4xl">/mo</span>
    </h3>
  </div>
  <div class="p-0">
    <ul class="flex flex-col gap-4">
      <li class="flex items-center gap-4">
        <RoundedCheck />
        <p
          class="block font-sans text-base font-normal leading-relaxed text-inherit antialiased"
        >
          5 team members
        </p>
      </li>
      <li class="flex items-center gap-4">
        <RoundedCheck />
        <p
          class="block font-sans text-base font-normal leading-relaxed text-inherit antialiased"
        >
          200+ components
        </p>
      </li>
      <li class="flex items-center gap-4">
        <RoundedCheck />
        <p
          class="block font-sans text-base font-normal leading-relaxed text-inherit antialiased"
        >
          40+ built-in pages
        </p>
      </li>
      <li class="flex items-center gap-4">
        <RoundedCheck />
        <p
          class="block font-sans text-base font-normal leading-relaxed text-inherit antialiased"
        >
          1 year free updates
        </p>
      </li>
      <li class="flex items-center gap-4">
        <RoundedCheck />
        <p
          class="block font-sans text-base font-normal leading-relaxed text-inherit antialiased"
        >
          Life time technical support
        </p>
      </li>
    </ul>
  </div>
  <div class="mt-12 p-0">
    <button
      class="block w-full select-none rounded-lg bg-[#6e00d3] py-3.5 px-7 text-center align-middle font-sans text-sm font-bold uppercase text-white shadow-md shadow-blue-gray-500/10 transition-all hover:scale-[1.02] hover:shadow-lg hover:shadow-blue-gray-500/20 focus:scale-[1.02] focus:opacity-[0.85] focus:shadow-none active:scale-100 active:opacity-[0.85] active:shadow-none disabled:pointer-events-none disabled:opacity-50 disabled:shadow-none"
      type="button"
      data-ripple-dark="true"
    >
      Buy Now
    </button>
  </div>
</div>

